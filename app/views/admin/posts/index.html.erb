<div class= "container px-5 px-sm-0">
  <h1 class= "text-secondary">投稿一覧</h1>
   <table class="table table-striped">
     <tr>
       <td class= "text-secondary">タイトル</td>
       <td class= "text-secondary">ニックネーム</td>
       <td class= "text-secondary">ジャンル名</td>
       <td class= "text-secondary">コメント数</td>
       <td class= "text-secondary">コメント点数平均</td>
    </tr>
    <% @posts.each do |post| %>
      <tr>
       <td><%= link_to post.title, admin_post_path(post.id), class:"link" %></td>
       <td><%= post.user.nick_name %></td>
       <td><%= post.genre.name %></td>
       <td><%= link_to "#{post.comments.count} コメント", admin_post_path(post.id), class:"link" %></td>
       <td><%= post.comments.pluck(:score).sum.fdiv(post.comments.count) %></td>
      </tr>
    <% end %>
  </table>
</div>