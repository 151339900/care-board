<h2>プロフィール編集</h2>
<div class = "container">
  <div class ="row">
    <div class= "col-md-4 offset-4">
      <%= form_with model: @user, url: user_path(@user.id) do |f| %>
      <h4>ユーザーネーム</h4>
      <%= f.text_field :nick_name,class:"form-control", autofocus: true, id:"inputName", placeholder:"名前"%>
      <h4>自己紹介</h4>
      <%= f.text_area :introduction,class:"form-control", autofocus: true %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
