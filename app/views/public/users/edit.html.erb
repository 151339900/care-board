<h2 class= "text-secondary">プロフィール編集</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class = "container">
  <div class ="row">
    <div class= "col-md-4 offset-4">
      <%= form_with model: @user, url: user_path(@user.id) do |f| %>
      <h4 class= "text-secondary">ユーザーネーム</h4>
      <%= f.text_field :nick_name,class:"form-control", autofocus: true, id:"inputName", placeholder:"名前"%>
      <h4 class= "text-secondary">自己紹介</h4>
      <%= f.text_area :introduction,class:"form-control", autofocus: true %>
      <%= f.submit %>
      <% end %>
      <button class = "btn btn-outline-danger">
         <%= link_to "退会", unsubscribe_users_path, class:"link" %>
      </button>
    </div>
  </div>
</div>
