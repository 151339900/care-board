<div class= "container">
  <div class= "row">
    <div class= "col-md-4 offset-4">
      <h1 class= "text-secondary">新規投稿</h1>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <!-- form_with部分 -->
      <%= form_with model:@post, url: '/posts', method: :post do |f| %>
        <h4 class= "text-secondary">タイトル</h4>
        <%= f.text_field :title,class:"form-control" %>
        <div class="form_input">
          <%= f.label :genre_id %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
        </div>

        <h4 class= "text-secondary">本文</h4>
        <%= f.text_area :discription,class:"form-control" %>

        <%= f.submit '投稿',class:"btn btn-success btn-block" %>
      <% end %>
  </div>
 </div>
</div>