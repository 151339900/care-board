<div class= "container px-5 px-sm-0">
 <h1 class= "text-secondary">投稿一覧</h1>
  <table class="table table-striped">
    <tr>
      <td class= "text-secondary">タイトル</td>
      <td class= "text-secondary">ニックネーム</td>
      <td class= "text-secondary">ジャンル名</td>
      <td class= "text-secondary">コメント数</td>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post.id) %></td>
        <td><%= link_to post.user.nick_name, "/users/#{post.user_id}" %></td>
        <td><%= post.genre.name %></td>
        <td><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></td>
      </tr>
    <% end %>
  </table>
</div>
