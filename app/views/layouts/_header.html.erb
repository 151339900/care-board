<body class="d-flex flex-column vh-100">
  <header class="shadow-sm">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Care board</a>
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target= "#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

       <!--会員ログイン時のヘッダー-->
         <div class="collapse navbar-collapse"  id="navbarSupportedContent">
           <ul class="navbar-nav mr-auto">

           <% if user_signed_in? %>
           <li class="nav-item" href="#">
             <%= link_to '投稿フォーム', posts_new_path, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "投稿一覧", posts_path, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "ユーザー詳細", user_path(current_user), class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "プロフィール編集", edit_user_path(current_user), class: 'nav-link text-dark' %>
           </li>

           <li class="d-flex justify-content-center mb-2">
             <%= render 'layouts/search' %>
           </li>
           <!--管理者ログイン時のヘッダー-->
           <% elsif admin_signed_in? %>
           <li class="nav-item" href="#">
             <%= link_to "投稿一覧", admin_posts_path, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "ジャンル作成", new_admin_genre_path, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= render 'layouts/search' %>
           </li>
           <!--ログイン前のヘッダー-->
           <% else %>
           <li class="nav-item" href="#">
             <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
           </li>

           <li class="nav-item" href="#">
             <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
           </li>

           <% end %>
           </ul>
        </div>
      </div>
  </header>

</body>


